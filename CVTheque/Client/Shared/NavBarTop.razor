@inject LocalStorage storage
@inject IJSRuntime JS
@inject NavigationManager uriHelper
@using Cloudcrate.AspNetCore.Blazor.Browser.Storage
@using System.Globalization


<nav class="navbar" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
        <a class="navbar-item" href="https://bulma.io">
            <img src="https://bulma.io/images/bulma-logo.png" width="112" height="28">
        </a>
        <a class="navbar-item" href="#">CVTheque EducAssist</a>
        <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample" @onclick="@ToogleNavBar">
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
        </a>
    </div>

    <div id="navbarBasicExample" class="navbar-menu @toogleClas">
        <div class="navbar-start">
            <a class="navbar-item" href="/">
                Home
            </a>


            @if (storage["token"] != null && storage["username"] != null)
            {
                <a class="navbar-item" href="/AdminGeneral/Accueil">
                    Admin
                </a>
                <div class="navbar-item has-dropdown is-hoverable">
                    <a class="navbar-link">
                        @tinfo.ToTitleCase(storage["username"])
                    </a>

                    <div class="navbar-dropdown">
                        <a class="navbar-item">
                            Sous-menu
                        </a>
                        <hr class="navbar-divider">
                        <a class="navbar-item" @onclick="@Logout">

                            Logout
                        </a>
                    </div>
                </div>
            }
        </div>
        @if (storage["token"] == null || storage["username"] == null)
        {
            <div class="navbar-end">
                <div class="navbar-item">
                    <div class="buttons">
                        <a class="button is-primary" href="/Login">
                            Se connecter
                        </a>
                    </div>
                </div>
            </div>
        }

    </div>
</nav>
@code {
    
    private static TextInfo tinfo = CultureInfo.CurrentCulture.TextInfo;
    string toogleClas = "";

    void ToogleNavBar()
    {
        if (toogleClas == "")
            toogleClas = "is-active";
        else
            toogleClas = "";
    }

    async Task Logout()
    {
        storage.RemoveItem("username");
        storage.RemoveItem("token");
        uriHelper.NavigateTo("/.");
        await JS.InvokeAsync<bool>("Refresh");
    }

}
